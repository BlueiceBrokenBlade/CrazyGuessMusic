<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/index_background"
    tools:context="com.imooc.crazyguessmusic.ui.FirstActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="235dp">

        <FrameLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:background="@drawable/game_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_current_stage"
                android:text="100"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/btn_start"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|bottom"
            android:background="@drawable/first_start_btn_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@drawable/index_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:background="@drawable/index_title"
            android:layout_width="130dp"
            android:layout_height="200dp"
            android:id="@+id/imageView3" />
    </FrameLayout>

    <FrameLayout
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_disc"/>
        <ImageView
            android:id="@+id/imag_discLight"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_disc_light"/>
        <ImageButton
            android:id="@+id/btn_play_start"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/disc_button_selector"/>
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_center"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="180dp"
            android:background="@drawable/game_pin"
            android:layout_gravity="right"
            android:id="@+id/imageView2" />
    </FrameLayout>

    <ImageView
        android:background="@drawable/first_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
